
@{
	//ProfessionalViewModel Pro = (ProfessionalViewModel)ViewData["servicespro"];
	Project p = (Project)ViewData["project"];
}
<section class="page-title" style="background-image: url(/assets/images/background/4.jpg)">
	<div class="auto-container">
		<div class="content">
			<div class="text">Welcome to our company</div>
			<h1>Mentors</h1>
		</div>
		<div class="breadcrumb-outer">
			<ul class="page-breadcrumb">
				<li><a asp-controller="Home" asp-action="Index">Home</a></li>
				<li>Mentors</li>
			</ul>
		</div>
	</div>
</section>
<!-- End Page Title Section -->
<div class="auto-container" style="margin-top:20px;">
<form class="form-login" asp-controller="Project" asp-action="Index" method="POST">
	<ul class="form-list row">
		@if ((int)ViewData["ok"] == 1)
			{
				<div class="alert alert-success" role="alert">
					The data has been added
			</div>}
			<li class="col-md-12 col-sm-12">
				<label>Number of project  </label>
				<input name="number" value="@if(@p.Number != null){@p.Number;}" type="number" maxlength="255" class="form-control">
			</li>
			<li class="col-md-12 col-sm-12">
			<label>Type projet <em>*</em></label>
			<select name="type" maxlength="255" class="form-control">
					<option value="null">Select your projet type</option>
					@foreach (Services ser in (List<Services>)ViewData["services"])
                        {
						<option value="@ser.Service"> @ser.Service </option>
						}
			</select>
		</li>
		<li class="col-md-12 col-sm-12">
			<label>Name project <em>*</em></label>
				<input name="name" value="@if(@p.Name !=null){@p.Name;}" required type="text" maxlength="255" class="form-control">
		</li>
		
		<li class="col-md-12 col-sm-12">
			<label>Estimates you have for the project <em>*</em></label>
				<input name="estimates" value="@if(@p.Estimates != null ){@p.Estimates;} " required type="text" class="form-control">
		</li>
		<li class="col-md-12 col-sm-12">
			<label>Nomber person <em>*</em></label>
				<input name="nbr_person" value="@if(@p.Nbr_peron !=null){
				@p.Nbr_peron; }
		" required type="text" class="form-control">
		</li>
		<li class="col-md-12 col-sm-12">
			<label>Siret </label>
			<input name="siret"  type="text" class="form-control">
		</li>

		<li class="col-md-12 col-sm-12">
			<label>Description  <em>*</em></label>
				<textarea style="border:#777 solid 0.5px;" name="description" rows="10" cols="150" maxlength="19000">@if (@p.Description != null){@p.Description;} </textarea>
		</li>

	</ul>
	@if ((int)ViewData["ok"] == 500)
	{
		<div class="alert alert-danger" role="alert">
				the information is incorrect
		</div>


	}
		@if ((int)ViewData["update"] == 1)
		{
			<div class="col-lg-12">
				<button name="go" value="update" class="btn btn-inline title color-three">
					<i class="fas fa-user-check"></i>
					<span>Update my project</span>
				</button>
			</div>
		}else{
			<div class="col-lg-12">
				<button name="go" value="project" class="btn btn-inline title color-thre ">
					<i class="fas fa-user-check"></i>
					<span>Add my project</span>
				</button>
			</div>
		}

		
</form>
	
</div>
<div class="alert alert-info " role="alert">

	<a class="theme-btn reply-btn align-items-md-center" asp-controller="Client" asp-action="Profil"><span class="fa fa-reply"></span> Reply</a>
</div>
