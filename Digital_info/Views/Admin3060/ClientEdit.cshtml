@{
	Client c = ViewData["update"] as Client;

}
<div class="" style="margin:50px auto;">

	<div class="account-wrap">
		<div class="container">
			<div class="row">
				<div class="col-sm-6 col-md-12">
					<!-- HTML -->
					<div id="account-id">
						<h4 class="account-title"><span class="fa fa-chevron-right"></span> Client</h4>
						<div class="account-form">
							@if ((int)ViewData["inscription"] == 1)
							{
								<div class="alert alert-success" role="alert">
									Your registration has been taken into account
								</div>
							}
							@if ((int)ViewData["email"] == 500)
							{
								<div class="alert alert-danger" role="alert">
								  incorrect format !
								</div>
								<span class="alert-danger"></span>
							}

							<form class="form-login" asp-controller="Admin3060" asp-action="ClientEdit" method="POST">
								<ul class="form-list row">

									<li class="col-md-12 col-sm-12">
										<label>Firstname <em>*</em></label>
										<input name="firstname" value="@c.Firstname" required type="text" class="form-control">
									</li>

									<li class="col-md-12 col-sm-12">
										<label>Lastname <em>*</em></label>
										<input name="lastname" required type="text" value="@c.Lastname" class="form-control">
									</li>
									<li class="col-md-12 col-sm-12">
										<label>Address  <em>*</em></label>
										<input name="address" required type="text" value="@c.Address" class="form-control">
									</li>
									<li class="col-md-12 col-sm-12">
										<label>City <em>*</em></label>
										<input name="city" required type="text" value="@c.City" class="form-control">
									</li>
									<li class="col-md-12 col-sm-12">
										<label>Phone <em></em></label>
										<input name="phone" required type="text" value="@c.Phone" class="form-control">
									</li>
									<li class="col-md-12 col-sm-12">
										<label>Email <em>*</em></label>
										@if ((int)ViewData["email"] == 300)
										{
											<div class="alert alert-danger" role="alert">
												your email is incorrect
											</div>
											<span class="alert-danger"></span>
										}
										<input name="email" required type="email" value="@c.Email" class="form-control">
									</li>
									<li class="col-md-12 col-sm-12">
										<label>Age <em></em></label>
										<input name="age" required type="number" value="@c.Age" class="form-control">
									</li>

								</ul>
								@if ((int)ViewData["inscription"] == 2)
								{
									<div class="alert alert-danger" role="alert">
										The password must be the same !
									</div>
								}
								<div class="col-lg-12">
									<button name="go" value="client" class="theme-btn btn-style-three">
										<i class="fas fa-user-check"></i>
										<span>Sign in </span>
									</button>
								</div>

							</form>
						</div>
					</div>
				</div>


			</div>
		</div>
	</div>
</div>